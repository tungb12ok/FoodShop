@{
}
<!-- Default box -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Order List</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Total Amount</th>
                    <th>Type Payment</th>
                    <th>Status</th>
                    <th>Created Date</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>

                @foreach (Order item in ViewBag.list)
                    {
                        <tr>
                            <td>@item.Code</td>
                            <td>@item.CustomerName</td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>

                            <td>@item.TotalAmount$</td>
                            <td>@(item.TypePayment == 1 ? "ShipCOD" : "Banking")</td>
                            <td>@(item.Status == 1 ? "Awaiting Payment" : "Completly Payment")</td>
                            <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="View" asp-controller="Order" asp-route-Id="@item.Id" class="btn btn-sm btn-success">Detail</a>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>

    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
    <!-- /.card-footer-->
</div>
<!-- /.card -->