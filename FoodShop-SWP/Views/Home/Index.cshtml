
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div>
            <div>

                <div class="hero__item set-bg" data-setbg="../WebLayout/img/hero/banner.png">
                    <div class="hero__text">
                        <span>4F Food</span>
                        <h2>Fast <br />100% Fresh</h2>
                        <p>Free Pickup and Delivery Available</p>
                        <a href="#" class="primary-btn">SHOP NOW</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
            @await Component.InvokeAsync("ProductCategoryMenu")
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                 @await Component.InvokeAsync("MenuArrivals") 
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @await Component.InvokeAsync("ProductByIsFeature")
        </div>
    </div>
</section>

<!-- Featured Section End -->
<!-- Blog Section Begin -->
<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>From The Blog</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var item in ViewBag.posts)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="@item.Image" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i>@item.CreatedDate</li>
                                <li><i class="fa fa-comment-o"></i>5</li>
                            </ul>
                            <h5><a href="#">@item.Alias</a></h5>
                            <p>
                                @item.Description
                            </p>
                            <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@item.Id" class="blog__btn">READ MORE <span class="arrow_right"></span></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Blog Section End -->

