    <script src="../WebLayout/js/jquery-ui.min.js"></script>
    <script src="../WebLayout/js/jquery.slicknav.js"></script>
    <script src="../WebLayout/js/mixitup.min.js"></script>
    <script src="../WebLayout/js/owl.carousel.min.js"></script>
    <script src="../WebLayout/js/main.js"></script>



</body>

</html>