                        <div class="footer__copyright__payment"><img src="../WebLayout/img/payment-item.png" alt=""></div>
                    </div>
                </div>
            </div> *@
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="../WebLayout/js/jquery-3.3.1.min.js"></script>
